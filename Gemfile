source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'

# Fast, Nimble PDF Writer for Ruby
gem 'prawn'

# A Rails plugin for leveraging the Prawn library to produce compiled pdf views.
gem "prawnto_2", :require => "prawnto"

group :development, :test do
  # BDD tool for Ruby Programmers.
  gem "rspec-rails", '~> 2.0'

  # Acceptance teste framework for web applications.
  gem "capybara"

  # Mainly used for testing Prawn, but will work with any PDF.
  gem 'pdf-inspector', :require => "pdf/inspector"
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

